rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // =============================================
    // HELPER FUNCTIONS
    // =============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Check file size (max 10MB)
    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Check if file is a PDF
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }

    // =============================================
    // COACH PROFILE IMAGES
    // =============================================
    match /coach-profiles/{userId}/{fileName} {
      // Anyone authenticated can read profile images
      allow read: if isAuthenticated();

      // Only the coach can upload their own profile images
      allow write: if isAuthenticated() &&
                   isOwner(userId) &&
                   isImage() &&
                   isValidFileSize();

      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // =============================================
    // FACILITY IMAGES
    // =============================================
    match /facility-images/{facilityId}/{fileName} {
      // Anyone authenticated can read facility images
      allow read: if isAuthenticated();

      // Only facility owner can upload images
      // Note: Ownership verification requires Cloud Functions for complex checks
      allow write: if isAuthenticated() &&
                   isImage() &&
                   isValidFileSize();

      allow delete: if isAuthenticated();
    }

    // =============================================
    // FACILITY DOCUMENTS (Business license, Insurance)
    // =============================================
    match /facility-documents/{userId}/{documentType}/{fileName} {
      // Only the owner and admins can read documents
      allow read: if isAuthenticated() && isOwner(userId);

      // Only the owner can upload documents
      allow write: if isAuthenticated() &&
                   isOwner(userId) &&
                   (isImage() || isPDF()) &&
                   request.resource.size < 20 * 1024 * 1024; // Max 20MB for documents

      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // =============================================
    // CHAT ATTACHMENTS
    // =============================================
    match /chat-attachments/{conversationId}/{fileName} {
      // Participants can read attachments
      allow read: if isAuthenticated();

      // Authenticated users can upload attachments
      allow write: if isAuthenticated() &&
                   isValidFileSize();

      // No deletion allowed
      allow delete: if false;
    }

    // =============================================
    // REVIEW PHOTOS
    // =============================================
    match /review-photos/{reviewId}/{fileName} {
      // Anyone authenticated can read review photos
      allow read: if isAuthenticated();

      // Authenticated users can upload review photos
      allow write: if isAuthenticated() &&
                   isImage() &&
                   request.resource.size < 5 * 1024 * 1024; // Max 5MB for review photos

      // No deletion allowed
      allow delete: if false;
    }

    // =============================================
    // RECEIPTS (Read-only for users)
    // =============================================
    match /receipts/{userId}/{fileName} {
      // Only the owner can read their receipts
      allow read: if isAuthenticated() && isOwner(userId);

      // Receipts are generated by Cloud Functions only
      allow write: if false;
      allow delete: if false;
    }

    // =============================================
    // USER VERIFICATION DOCUMENTS
    // =============================================
    match /verification-documents/{userId}/{documentType}/{fileName} {
      // Only the owner can read their verification documents
      allow read: if isAuthenticated() && isOwner(userId);

      // Only the owner can upload verification documents
      allow write: if isAuthenticated() &&
                   isOwner(userId) &&
                   (isImage() || isPDF()) &&
                   request.resource.size < 20 * 1024 * 1024;

      allow delete: if isAuthenticated() && isOwner(userId);
    }
  }
}
